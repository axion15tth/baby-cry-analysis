MAX_FILE_SIZE_MB=500
STORAGE_PATH=./storage

# ML Models (Optional)
ML_MODEL_PATH=./ml_models/cry_detector_v1.pth

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
